# API Gateway Environment Configuration
# Copy this to .env and modify as needed

# Server Settings
PORT=8080
APP_ENV=development
APP_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=petmatch-dev-secret-key-change-in-production-2024
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_HOURS=168

# Service URLs (Internal Communication)
PET_SERVICE_URL=http://localhost:8083
USER_SERVICE_URL=http://localhost:8082
AUTH_SERVICE_URL=http://localhost:8081
CHAT_SERVICE_URL=http://localhost:8085
FILE_SERVICE_URL=http://localhost:8087

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPM=100

# Logging
LOG_LEVEL=info
LOG_JSON=false

# Go Module Proxy Settings (for development)
# Uncomment if you have SSL certificate issues
# GOPROXY=direct
# GOSUMDB=off
# GOINSECURE=*
