# PetMatch Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# Application Environment
APP_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (CHANGE THESE!)
# Generate strong secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET=your-access-secret-here-change-me
JWT_REFRESH_SECRET=your-refresh-secret-here-change-me
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Service URLs
AUTH_SERVICE_URL=http://localhost:18091
USER_SERVICE_URL=http://localhost:18092
PET_SERVICE_URL=http://localhost:8083
MATCH_SERVICE_URL=http://localhost:8084
CHAT_SERVICE_URL=http://localhost:8085

# External Services
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=change-me
MINIO_SECRET_KEY=change-me

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# API Gateway specific
JWT_SECRET=your-api-gateway-jwt-secret-here-change-me
