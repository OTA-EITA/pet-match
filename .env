# PetMatch Development Environment - Redis修正版
APP_ENV=development

# Redis (パスワードなしで設定)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets
JWT_ACCESS_SECRET=dev-access-secret-key-please-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-please-change-in-production
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800

# Service URLs
AUTH_SERVICE_URL=http://localhost:18091
USER_SERVICE_URL=http://localhost:18092
PET_SERVICE_URL=http://localhost:8083
MATCH_SERVICE_URL=http://localhost:8084
CHAT_SERVICE_URL=http://localhost:8085

# External Services
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# API Gateway specific
JWT_SECRET=dev-api-gateway-jwt-secret-key-please-change-in-production
